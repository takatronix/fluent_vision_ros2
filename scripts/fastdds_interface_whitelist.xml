<?xml version="1.0" encoding="UTF-8"?>
<!--
  Fast DDS interface whitelist for multi-NIC hosts.
  - Keeps SHM for local performance
  - Ensures UDPv4 uses only the intended interfaces so remote hosts can discover/connect
  NOTE: IPs below should reflect this host's active NICs
-->
<profiles>
  <transport_descriptors>
    <transport_descriptor>
      <transport_id>udp_transport</transport_id>
      <type>UDPv4</type>
      <interfaceWhiteList>
        <!-- Wi-Fi subnet -->
        <address>192.168.1.58</address>
        <!-- Wired subnet (if used) -->
        <address>192.168.100.50</address>
      </interfaceWhiteList>
    </transport_descriptor>
    <transport_descriptor>
      <transport_id>shm_transport</transport_id>
      <type>SHM</type>
    </transport_descriptor>
  </transport_descriptors>

  <participant profile_name="default_participant" is_default_profile="true">
    <rtps>
      <!-- Disable builtins and use explicit transports defined above -->
      <useBuiltinTransports>false</useBuiltinTransports>
      <userTransports>
        <transport_id>udp_transport</transport_id>
        <transport_id>shm_transport</transport_id>
      </userTransports>
    </rtps>
  </participant>
</profiles>


